{
    "name": "claude-context-bar",
    "displayName": "Claude Context Bar",
    "description": "Real-time context window usage monitor for Claude Code sessions. See token counts in your status bar with color-coded warnings.",
    "version": "1.4.0",
    "publisher": "ezoosk",
    "author": {
        "name": "Ed Zisk",
        "url": "https://github.com/ezoosk"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/ezoosk/claude-context-bar"
    },
    "homepage": "https://github.com/ezoosk/claude-context-bar#readme",
    "bugs": {
        "url": "https://github.com/ezoosk/claude-context-bar/issues"
    },
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#1a1a2e",
        "theme": "dark"
    },
    "keywords": [
        "claude",
        "claude code",
        "anthropic",
        "context window",
        "token counter",
        "ai assistant"
    ],
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other",
        "Visualization"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Claude Context Bar",
            "properties": {
                "claudeContextBar.autoColor": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically assign different colors to each project (rainbow). When off, uses your base color with subtle variations."
                },
                "claudeContextBar.baseColor": {
                    "type": "string",
                    "enum": [
                        "White",
                        "Blue",
                        "Purple",
                        "Cyan",
                        "Green",
                        "Yellow",
                        "Orange",
                        "Pink"
                    ],
                    "default": "White",
                    "description": "Base color when Auto Color is off. Each project gets a subtle variation of this color."
                },
                "claudeContextBar.showEmoji": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show emoji icons based on project name (music ðŸŽµ, code ðŸ’», game ðŸŽ®, etc.)"
                },
                "claudeContextBar.contextLimit": {
                    "type": "number",
                    "default": 200000,
                    "description": "Maximum context window size in tokens"
                },
                "claudeContextBar.warningThreshold": {
                    "type": "number",
                    "default": 50,
                    "description": "Percentage at which to show warning color (yellow)"
                },
                "claudeContextBar.dangerThreshold": {
                    "type": "number",
                    "default": 75,
                    "description": "Percentage at which to show danger color (red)"
                },
                "claudeContextBar.refreshInterval": {
                    "type": "number",
                    "default": 30,
                    "description": "Refresh interval in seconds"
                },
                "claudeContextBar.idleTimeout": {
                    "type": "number",
                    "default": 180,
                    "minimum": 10,
                    "maximum": 600,
                    "description": "Seconds of inactivity before hiding a session (default: 180 / 3 minutes). Click to manually hide."
                },
                "claudeContextBar.compactMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Shorten project names to save status bar space. Multi-word names become acronyms (my-cool-project â†’ MCP), single words become abbreviated (typescript â†’ Tscript). Names â‰¤5 chars stay unchanged."
                },
                "claudeContextBar.shortNames": {
                    "type": "object",
                    "default": {},
                    "description": "Custom short names for projects. Keys are project names, values are the short versions (e.g. {\"my-cool-project\": \"MCP\", \"webapp\": \"WA\"})."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.74.0",
        "typescript": "^5.0.0"
    }
}